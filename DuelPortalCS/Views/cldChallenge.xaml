<controls:ChildWindow x:Class="DuelPortalCS.Views.cldChallenge" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="Challenge" Background="#FF7CAAAA" Foreground="#FF0000DB">
    <Grid x:Name="LayoutRoot" Margin="2" Background="#FFF2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Height="56" HorizontalAlignment="Left" Margin="12,37,0,0" Name="textBlock1" Text=" has challenged you. Accept or Reject?" VerticalAlignment="Top" Width="354" />
        <Button Content="Accept" Height="43" HorizontalAlignment="Left" Margin="22,140,0,0" Name="cmdAccept" VerticalAlignment="Top" Width="132" Click="cmdAccept_Click" />
        <Button Content="Reject" Height="43" HorizontalAlignment="Left" Margin="182,140,0,0" Name="cmdReject" VerticalAlignment="Top" Width="134" Click="cmdReject_Click" />
    </Grid>
</controls:ChildWindow>