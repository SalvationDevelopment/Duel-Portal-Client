<controls:ChildWindow x:Class="DuelPortalCS.Views.cldDropDownDialogue"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="cldDropDownDialogue">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <TextBlock x:Name="lblDialogue" HorizontalAlignment="Left" Margin="20,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="23" Width="348"/>
        <ComboBox x:Name="cmbChoices" HorizontalAlignment="Left" Margin="106,59,0,0" VerticalAlignment="Top" Width="157" Height="27" SelectionChanged="cmbChoices_SelectionChanged"/>
        <Button x:Name="cmdChoose" Content="Choose" HorizontalAlignment="Left" IsEnabled="False" Margin="106,138,0,0" VerticalAlignment="Top" Width="157" Click="cmdChoose_Click"/>
    </Grid>
</controls:ChildWindow>