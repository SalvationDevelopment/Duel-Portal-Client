<controls:ChildWindow x:Class="DuelPortalCS.Views.cldInput"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="422" Height="135"
           Title="Input" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128*" />
            <ColumnDefinition Width="272*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" Grid.Column="1" Click="CancelButton_Click" />
        <Button x:Name="OKButton" Content="OK" Width="75" Height="23" HorizontalAlignment="Right"  Margin="0,12,79,0" Grid.Row="1" Grid.Column="1" Click="OKButton_Click" />
        <TextBox Height="23" Margin="25,38,39,0" Name="TextBox1" VerticalAlignment="Top" Grid.ColumnSpan="2" AcceptsReturn="True" />
        <TextBlock Height="33" HorizontalAlignment="Left" Margin="25,0,0,0" Name="Label1" VerticalAlignment="Top" Width="336" Grid.ColumnSpan="2" TextWrapping="Wrap" TextAlignment="Center" />
    </Grid>
</controls:ChildWindow>
